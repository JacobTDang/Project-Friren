{
  "name": "friren-trading-terminal",
  "version": "1.0.0",
  "description": "High-performance trading terminal with glassmorphism UI",
  "main": "electron.js",
  "scripts": {
    "dev": "concurrently \"npm run tailwind:watch\" \"webpack --mode development --watch\"",
    "build": "npm run tailwind:build && webpack --mode production",
    "tailwind:build": "tailwindcss -i ./src/styles/input.css -o ./dist/styles.css --minify",
    "tailwind:watch": "tailwindcss -i ./src/styles/input.css -o ./dist/styles.css --watch",
    "electron": "electron .",
    "electron:dev": "ELECTRON_IS_DEV=true electron .",
    "package": "npm run build && electron-builder",
    "package:linux": "npm run build && electron-builder --linux",
    "package:pi": "npm run build && electron-builder --linux --armv7l",
    "start": "npm run build && npm run electron",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist dist-electron temp"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^7.6.0",
    "css-loader": "^6.7.0",
    "electron": "^37.2.5",
    "electron-builder": "^24.6.0",
    "eslint": "^8.45.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.0.0",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.0",
    "style-loader": "^3.3.0",
    "tailwindcss": "^3.3.0",
    "ts-loader": "^9.4.0",
    "typescript": "^4.9.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0"
  },
  "build": {
    "appId": "com.friren.trading-terminal",
    "productName": "Friren Trading Terminal",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "armv7l"
          ]
        }
      ],
      "category": "Office"
    },
    "compression": "maximum",
    "removePackageScripts": true
  },
  "electronmon": {
    "patterns": [
      "./dist/**/*"
    ],
    "logLevel": "quiet"
  }
}
